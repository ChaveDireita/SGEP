@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Alterar senha";
}
<br/>
<br/>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <h3 class="text-center">@ViewData["Title"]</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger error-message-correction"></div>
            <input asp-for="Input.Code" type="hidden" />
            <input asp-for="Input.Email" type="hidden" />
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input disabled name="display-email" asp-for="Input.Email" class="form-control squareborder" />
                @* <span asp-validation-for="Input.Email" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control squareborder" />
                @* <span asp-validation-for="Input.Password" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control squareborder" />
                @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
            </div>
            <button type="submit" class="btn btn-success squareborder">Alterar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
