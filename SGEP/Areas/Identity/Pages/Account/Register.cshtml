@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar nova conta";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h3 class="text-center">Nova Conta</h3>
            <hr />
            <!--div asp-validation-summary="All" class="text-danger"></div-->
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control squareborder" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control squareborder" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control squareborder" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success squareborder">Criar</button>
            <a href="~/Identity/Account/Login?returnUrl=%2F" role="button" class="btn btn-outline-danger squareborder">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
