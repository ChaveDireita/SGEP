<button type="button" class="btn btn-primary squareborder" data-toggle="modal" data-target="#form-modal">
    <i class="fas fa-clock"></i> Escolher período
</button>
<div class="modal fade" 
     id="form-modal" 
     tabindex="-1" 
     role="dialog" 
     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content squareborder">
      <div class="modal-header">
        <h5 class="modal-title">Escolher Período</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form" onclick="function(e){e.preventDefault();}">
            <div class="form-group">
                <label for="inicio">Data inicial</label>
                <input class="form-control squareborder" type="date" name="inicio"/>
            </div>
            <div class="form-group">
                <label for="fim">Data final</label>
                <input class="form-control squareborder" type="date" name="fim"/>
            </div>
            <div class="form-group">
                <label for="material">Material</label>
                <select class="form-control squareborder" name="material">
                    <option selected disabled>Selecione um material</option>
                </select>
            </div>
            <div class="form-group">
                <label for="tipo">Tipo</label>
                <select class="form-control squareborder" name="tipo">
                    <option value="Entrada" selected disabled>Selecione um tipo</option>
                    <option value="Entrada">Entrada</option>
                    <option value="Saída">Saída</option>
                    <option value="Consumo">Consumo</option>
                </select>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-primary squareborder">Atualizar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts
{
  <script>
    get.tag('form').onsubmit = (e) => e.preventDefault();
    fetch('/Material/List')
    .then(res => res.json())
    .then(json => 
    {
      for(const m in json)
      {
        get('material').innerHTML += '<option value="' + m.id + '">' + m.id + '</option>';
      }
    })
  </script>
}