@model IEnumerable<SGEP.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
    string controller = "Funcionario";
}

<br />
<h2>Funcionários</h2>
<br />
<button onclick="add()" class="btn btn-success squareborder"><i class="fas fa-plus"></i> Adicionar</button>
<button id="edit" 
        class="btn btn-outline-secondary squareborder" 
        disabled 
        title="Selecione um item da lista abaixo"><i class="fas fa-edit"></i> Editar</button>
        
<button id="details" 
        class="btn btn-outline-secondary squareborder" 
        disabled 
        title="Selecione um item da lista abaixo"><i class="fas fa-info"></i> Detalhes</button>

<div class="float-right d-inline">
    <button class="btn btn-outline-primary squareborder" 
            data-toggle="collapse" 
            data-target="#pesquisa" 
            aria-expanded="false" 
            aria-controls="pesquisa" 
            title="Pesquisar"><i class="fas fa-search"></i></button>

    <button class="btn btn-outline-secondary squareborder" 
            onclick="list()"
            title="Atualizar"><i class="fas fa-sync"></i></button>

    <button id="btn-del" 
            class="btn btn-outline-danger squareborder" 
            onclick="toggleDelete()"
            title="Remover"><i class="fas fa-trash"></i></button>
</div>
<br/>
<div class="container row justify-content-center">
    <div class="collapse col-md-12" id="pesquisa">
    <br/>
        <div class="card card-body">
            <form class="form">
                <div class="row justify-content-center">
                    <div class="col">
                        <input class="form-control squareborder" type="number" placeholder="Código" aria-label="Search" id="search-codigo">
                    </div>
                    <div class="col">
                        <input class="form-control squareborder" type="text" placeholder="Nome" aria-label="Search" id="search-nome">
                    </div>
                    <div class="col">
                        <input class="form-control squareborder" type="text" placeholder="Cargo" aria-label="Search" id="search-cargo">
                    </div>
                </div>
            </form>
            <br />
            <div class="float-right">
                <a id="search-search" href="#" class="float-right">Pesquisar</a>
            </div>
        </div>
    </div>
</div>
<br/>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="lista">
    </tbody>
</table>

@section Scripts
{
    <script>
        const lista = document.getElementById('lista');
        const checkDel = document.getElementById('checkDel');
        const controller = 'Funcionario';
        $('#search-search').on("click", () => 
        {
            getAll(document.getElementById('search-codigo').value, 
                   document.getElementById('search-nome').value,
                   document.getElementById('search-cargo').value);
        });
        list();
        function list()
        {
            getAll('','', '');
        }

        function getAll(id, nome, cargo)
        {
            console.log(id, nome, cargo);
            lista.innerHTML = '<tr><td colspan=4 class="reloading"><i class="fas fa-sync reloading"></i></td></tr>';
            fetch('/' + controller + '/List/?id=' + id + '&nome=' + nome + '&cargo=' + cargo)
            .then((res) => res.json())
            .then((json) => 
            {
                lista.innerHTML = '';
                for(const f of json)
                {
                    lista.innerHTML += '<tr id="' + f.id + '" class="selectable loading" onclick="selectRow(' + f.id + ')">' +
                                            '<td>' +
                                                f.id + 
                                            '</td>' +
                                            '<td>' +
                                                f.nome + 
                                            '</td>' +
                                            '<td>' + 
                                                f.cargo +
                                            '</td>' +
                                            '<td>' + 
                                                //'<a href="Edit/'+ f.id + '">Edit</a> |' + 
                                                //'<a href="Details/'+ f.id + '">Details</a> |' +
                                                '<a class="txt-danger float-right delete text-danger" href="#" + onclick="remove(' + f.id + ')" hidden="true"><i class="fas fa-minus-circle" style="font-size: 18px"></i></a>' +
                                            '</td>' +
                                        '</tr>';
                }
            });
        }

        function add()
        {
            fetch('/' + controller + '/Add', { method: 'POST' }).then((res) => list());
        }

        function remove(id)
        {
            fetch('/' + controller + '/Delete/' + id, { method: 'POST' }).then((res) => list());
        }

        function toggleDelete()
        {
            const btnDels = document.getElementsByClassName('delete');
            const checkDel = document.getElementById('checkDel');
            for(const btn of btnDels)
                btn.hidden = !btn.hidden;
        }

        function selectRow (id)
        {
            const selected = $('.selected');
            if (selected.length > 0) 
                selected[0].setAttribute('class', 'selectable');
            $('#' + id).attr('class', 'selected');
            $('#edit').attr('disabled', false);
            $('#edit').on('click', () => 
            {
                //Código do modal
            });
            $('#details').attr('disabled', false);
            $('#details').on('click', () => 
            {
                //Código do modal
            });

        }
    </script>
}