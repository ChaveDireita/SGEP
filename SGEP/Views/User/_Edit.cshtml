@model SGEP.Models.UserForm

<div class="modal fade cleanable" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="modal-edit-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content squareborder">
            <div class="modal-header header-dark squareborder">
                <h5 class="modal-title" id="modal-edit-title">Editar Usuário</h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               <form asp-action="_Create" asp-controller="Create" id="form-edit">
                    <input asp-for="Id" id="Id-edit" hidden class="form-control" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome completo</label>
                        <input asp-for="Nome" id="Nome-edit" class="form-control squareborder" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">E-mail</label>
                        <input asp-for="Email" id="Email-edit" class="form-control squareborder" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label">Telefone</label>
                        <input asp-for="Telefone"id="Telefone-edit"  class="form-control squareborder" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role" class="control-label">Tipo</label>
                        <select asp-for="Role" id="Role-edit" class="form-control squareborder">
                            <option value="Almoxarife">Almoxarife</option>
                            <option value="Gerente">Gerente</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-success squareborder" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
