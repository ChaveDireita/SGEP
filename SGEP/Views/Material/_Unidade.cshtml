@model SGEP.Models.Unidade
<!--MODAL DE UNIDADES-->
<div class="modal fade" id="unidadesmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content squareborder">
            <div class="modal-header header-dark squareborder">
                <h5 class="modal-title" id="modaltitle">Unidades de medida</h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (User.IsInRole("Almoxarife")){
                    <p>
                        <button type="button" class="btn btn-success squareborder" id="openuniadd"><i class="fas fa-plus"></i> Adicionar</button>
                        <button type="button" class="btn btn-outline-secondary squareborder" disabled id="edit-unidade"><i class="fas fa-edit"></i> Editar</button>
                    </p>
                }
                <table class="table" id="unidadestable">
                    <thead class="thead-dark">
                        <th>
                            Nome
                        </th>
                        <th>
                            Abreviação
                        </th>
                    </thead>
                    <tbody id="lista-unidades">

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--MODAL DE ADICIONAR UNIDADE-->
<div class="modal fade" id="unidademanagementmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content squareborder">
            <div class="modal-header header-dark squareborder">
                <h5 class="modal-title" id="addunimodaltitle">Adicionar Unidade</h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" id="form-create-unidade">
                    <div class="form-group">
                        <label class="control-label">Nome da Unidade:</label>
                        <input class="form-control squareborder" asp-for="Nome" id="unidadenomeinput" />
                        <span class="text-danger" asp-validation-for="Nome"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Abreviação:</label>
                        <input class="form-control squareborder" asp-for="Abreviacao" id="unidadeabvinput" />
                        <span class="text-danger" asp-validation-for="Abreviacao"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success squareborder" value="Adicionar" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!--MODAL DE EDITAR UNIDADE-->
<div class="modal fade" id="unidadeeditmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content squareborder">
            <div class="modal-header header-dark squareborder">
                <h5 class="modal-title">Editar Unidade</h5>
                <button type="button" style="color:white;" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" id="form-edit-unidade">
                    <input class="form-control" type="hidden" asp-for="Id" id="unieditid" />
                    <div class="form-group">
                        <label class="control-label">Nome da Unidade:</label>
                        <input class="form-control squareborder" asp-for="Nome" id="unieditnome" />
                        <span class="text-danger" asp-validation-for="Nome"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Abreviação(Opicional):</label>
                        <input class="form-control squareborder" asp-for="Abreviacao" id="unieditabv" />
                        <span class="text-danger" asp-validation-for="Abreviacao"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-secondary squareborder" type="submit" value="Salvar" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>